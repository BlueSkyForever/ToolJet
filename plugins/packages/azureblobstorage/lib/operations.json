{
  "$schema": "https://raw.githubusercontent.com/ToolJet/ToolJet/develop/plugins/schemas/operations.schema.json",
  "title": "Azure Blob Storage datasource",
  "description": "A schema defining Azure Blob Storage datasource",
  "type": "cloud-storage",
  "defaults": {},
  "properties": {
    "operation": {
      "label": "Operation",
      "key": "operation",
      "type": "dropdown-component-flip",
      "description": "Single select dropdown for operation",
      "list": [
        {
          "value": "list_containers",
          "name": "List containers"
        },
        {
          "value": "list_blobs",
          "name": "List blobs"
        },
        {
          "value": "remove_object",
          "name": "Remove object"
        },
        {
          "value": "list_buckets",
          "name": "List buckets"
        },
        {
          "value": "list_objects",
          "name": "List objects in a bucket"
        },
        {
          "value": "signed_url_for_get",
          "name": "Signed url for download"
        },
        {
          "value": "signed_url_for_put",
          "name": "Signed url for upload"
        }
      ]
    },
    "list_blobs": {
      "containerName": {
        "label": "Container",
        "key": "containerName",
        "type": "text",
        "lineNumbers": false,
        "description": "Enter container name",
        "width": "320px",
        "height": "36px",
        "placeholder": "Enter container name"
      },
      "prefix": {
        "label": "Prefix",
        "key": "prefix",
        "lineNumbers": false,
        "description": "Enter prefix",
        "width": "320px",
        "height": "36px"
      },
      "offset": {
        "label": "Offset",
        "key": "offset",
        "type": "text",
        "lineNumbers": false,
        "description": "Enter offset",
        "width": "320px",
        "height": "36px"
      },
      "continuationToken": {
        "label": "Continuation Token",
        "key": "continuationToken",
        "type": "text",
        "lineNumbers": false,
        "description": "Enter continuation token",
        "width": "320px",
        "height": "36px"
      }
    }
  }
}